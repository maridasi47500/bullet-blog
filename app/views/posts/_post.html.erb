<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Thumbnail url:</strong>
    <%= post.thumbnail_url %>
  </p>

  <p>
    <strong>Background url:</strong>
    <%= post.background_url %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author_id %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category_id %>
  </p>

</div>
